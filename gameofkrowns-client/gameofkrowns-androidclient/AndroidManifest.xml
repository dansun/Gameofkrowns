<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hackermongo.gameofkrowns.android"
    android:versionCode="1"
    android:versionName="0.0.2-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.hackermongo.gameofkrowns.android.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hackermongo.gameofkrowns.android.GameofkrownsListActivity"
            android:label="@string/title_gameofkrowns_list"
            android:parentActivityName="org.hackermongo.gameofkrowns.android.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.hackermongo.gameofkrowns.android.LoginActivity$UserLoginTask" />
        </activity>
        <activity
            android:name="org.hackermongo.gameofkrowns.android.GameofkrownsDetailActivity"
            android:label="@string/title_gameofkrowns_detail"
            android:parentActivityName=".GameofkrownsListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GameofkrownsListActivity" />
        </activity>
    </application>

</manifest>